---

import CertificationIcon from "../icons/CertificationIcon.astro";
// Datos de los certificados
const certificados = [
  {
    id: 1,
    titulo: "Desarrollo de aplicaciones web con IA",
    institucion: "Udemy",
    fecha: "2025",
    descripcion: "Desarrollo de aplicaciones web con IA ",
    enlace: "#",
    tecnologias: ["DeepSeek", "OpenIA", "JavaScript", "HTML", "CSS"],
  }
];
---

<section id="certificados" class="w-full lg:w-[740px] flex flex-col justify-center gap-4 mb-20 mt-20">
    <h2
      class="text-3xl font-semibold mb-5 text-white flex items-center gap-x-5 md:mt-4 xs:mt-20 xxs:mt-60 dark:text-gray-900"
    ><CertificationIcon class="size-8" />
    Certificados</h2>
    <div class="grid gap-8 md:gap-12">
      {certificados.map((cert, index) => (
        <div class={`group relative ${
          index % 2 === 0 ? "md:flex-row" : "md:flex-row-reverse"
        } flex flex-col md:flex gap-8 items-center`}>
          
          <div class="relative w-full md:w-1/2">
            <div class={`relative overflow-hidden rounded-3xl p-1 ${
              index % 3 === 0
                ? "bg-gradient-to-br from-yellow-400 via-orange-500 to-pink-500"
                : index % 3 === 1
                  ? "bg-gradient-to-br from-blue-400 via-purple-500 to-pink-500"
                  : "bg-gradient-to-br from-green-400 via-blue-500 to-purple-500"
            }`}>
              <div class="bg-white rounded-3xl p-8 h-64 flex items-center justify-center">
                <div class="text-center">
                  <svg class="w-16 h-16 mx-auto mb-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
                  </svg>
                  <h3 class="text-xl font-bold text-gray-800 mb-2">{cert.titulo}</h3>
                </div>
              </div>
            </div>
          </div>

          <div class="w-full md:w-1/2 space-y-6">
            <div>
              <h3 class="text-3xl font-bold text-purple-400 mb-2">{cert.titulo}</h3>
              <div class="flex items-center gap-2 mb-4">
                <span class="text-white font-medium">{cert.institucion}</span>
                <span class="bg-teal-600 text-white px-2 py-1 rounded-md text-sm font-medium">
                  {cert.fecha}
                </span>
              </div>
            </div>

            <p class="text-gray-300 text-lg leading-relaxed">{cert.descripcion}</p>

            <!-- TecnologÃ­as -->
            <div class="flex flex-wrap gap-2">
              {cert.tecnologias.map((tech) => (
                <span class="border border-purple-400 text-purple-300 hover:bg-purple-400 hover:text-white transition-colors px-3 py-1 rounded-full text-sm font-medium">
                  {tech}
                </span>
              ))}
            </div>

            <!-- Credencial y enlace -->
            <div class="space-y-3">
              <a 
                href={cert.enlace} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center gap-2 border border-white text-white hover:bg-white hover:text-purple-900 transition-colors px-4 py-2 rounded-md bg-transparent group"
              >
                Ver certificado
                <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      ))}
    </div>
</section>
