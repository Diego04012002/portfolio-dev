---
interface Props {
  title: string;
  company: string;
  date: string;
  description: string;
  link: string;
  practica: boolean;
  job: boolean;
}

const { title, company, date, description, link, practica, job } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-blue-500 rounded-full -start-1.5 border border-blue-500 dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="mb-1 text-sm font-normal leading-none text-sky-200/90 dark:text-blue-800"
  >{date}</time
>
<h3
  class={`flex flex-row items-center gap-x-2 text-lg font-semibold text-fuchsia-700 dark:text-gray-800 md:flex-row mt-2  ${practica || job ? "xxs:flex-col xxs:items-start xxs:mb-2 xs:flex-row" : ""}`}
>
  {title} - {company}
  {
    practica && (
      <span class="rounded-md bg-slate-800/70 py-0.5 px-2.5 w-auto border border-transparent text-sm text-white transition-all shadow-sm hover:scale-105">
        Practicas
      </span>
    )
  }
  {
    job && (
      <span class="rounded-md bg-teal-900/70 py-0.5 px-2.5 border border-transparent text-sm text-white transition-all shadow-sm dark:bg-cyan-600 hover:scale-105">
        Trabajo
      </span>
    )
  }
</h3>
<p class="mb-4 text-base font-normal text-pretty text-white dark:text-gray-400">
  {description}
</p>
<a
  href={link}
  target="_blank"
  class="inline-flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg hover:bg-gray-100 hover:text-violet-700 focus:z-10 focus:ring-4 focus:outline-none focus:ring-gray-100 focus:text-blue-700 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:text-white dark:hover:bg-gray-700 dark:focus:ring-gray-700"
  >Saber mas <svg
    class="w-3 h-3 ms-2 rtl:rotate-180"
    aria-hidden="true"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 14 10"
  >
    <path
      stroke="currentColor"
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M1 5h12m0 0L9 1m4 4L9 9"></path>
  </svg>
</a>
