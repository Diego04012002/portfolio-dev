---
import Header from "../components/Header.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import "../styles/global.css";
import "@fontsource-variable/onest";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Diego Alejandro Garcia Deus</title>
  </head>
  <body>
    <div class="bg-main fixed left-0 top-0 -z-10 h-full w-full">
      <div
        class="bg-style absolute inset-0 -z-10 h-full w-full items-center px-5 py-24 [background:radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"
      >
      </div>
    </div>
    <Header />
    <ThemeToggle />
    <slot />
  </body>
</html>

<style>
  :root {
    color-scheme: dark light;
  }
   
  html {
    font-family: "Onest Variable", sans-serif;
    scroll-behavior: smooth;
  }
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    min-height: 100vh;
  }
</style>